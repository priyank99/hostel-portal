<%include ../partials/header_admin%>

<div class="container">
  <form action="/admin/historydate" method="post">
    <div class="row">
      <div class="form-group col-sm-6">
      <label for="hosname">Hostel Name</label>
      <select class="form-control" id="hosname" name="hosid">
        <% hostels.forEach(function(hostel){%>
          <option value="<%= hostel._id %>"> <%= hostel.hostelname %></option>
        <%});%>        
      </select>
      </div>
      <div class="form-group col-sm-6">
        <label for="date">Date</label>
        <input type="date" class="form-control" id="date" name="date" placeholder="Select Date" required="true"></input>
      </div>
    <button class="btn btn-primary" type="submit">
      Submit
    </button>
    </div>
  </form>
</div>


<%include ../partials/footer%>