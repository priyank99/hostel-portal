<% include ../partials/header_admin %>

 <div class="container">
    <form action="/admin/create" method="post">
      <div class="row">
        <div class="form-group col-sm-6">
         <label for="name">Name</label>
         <input type="text" class="form-control" id="name" name="admin[adminname]" placeholder="Enter Name"> </input>
        </div>
       <div class="form-group col-sm-6">
         <label for="dob">Date of Birth</label>
         <input type="date" class="form-control" id="dob" name="admin[dob]" placeholder="Enter DOB"></input>
       </div>  
      </div>
     <div class="row">
       <div class="form-group col-sm-6">
         <label for="email"> Email ID(Username)</label>
         <input type="email" class="form-control" id="cardStatus" aria-describedby="emailInfo" name="admin[emailID]" placeholder="Enter Email ID"></input>         
         <small id="emailInfo" class="text-mute form-text"> Email ID would be the username of the User.</small>
       </div>
       <div class="form-group col-sm-6">
         <label for="mobNo"> Mobile Number </label>
         <input type="text" class="form-control" id="mobNo" name="admin[mobNo]" placeholder="Enter Mobile Number"></input>
       </div> 
     </div>     
     <div class="row">
       <div class="form-group col-sm-6">
         <label for="addr"> Address </label>
         <input type="text" class="form-control" id="addr" name="admin[address]" placeholder="Enter Address"></input>
       </div>
     </div>
     <div class="row">
       <div class="form-group col-sm-6">
         <label for="accessLev"> Access Level </label>
         <select class="form-control" id="accessLev" name="admin[accessLevel]">
           <option value="1">View Student Information and History</option>
           <option value="2"> View and Edit Student Information and History</option>
           <option value="3"> View, Edit and Add Users</option>
         </select>
       </div> 
       <div class="form-group col-sm-6">
          <label for="hostel"> Assign Hostel</label>
          <input type="text" name="admin[assignedTo]" class="form-control" placeholder="Enter Hostel Assigned"></input>
       </div>
     </div> 
     <button type="submit" class="btn btn-primary">Submit</button>
   </form>
</div>

<%include ../partials/footer %>