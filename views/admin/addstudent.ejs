<% include ../partials/header_admin %>

 <div class="container">
    <form action="/admin/addstudent" method="post">
      <div class="row">
        <div class="form-group col-sm-6">
         <label for="name">Name</label>
         <input type="text" class="form-control" id="name" name="student[name]" placeholder="Enter Name"> </input>
        </div>
        <div class="form-group col-sm-6">
         <label for="name">Roll No</label>
         <input type="text" class="form-control" id="rollNo" name="student[rollNo]" placeholder="Enter Roll No"> </input>
        </div>

      </div>
     <div class="row">
       <div class="form-group col-sm-6">
         <label for="email"> Email ID(Username)</label>
         <input type="email" class="form-control" id="cardStatus" aria-describedby="emailInfo" name="student[emailID]" placeholder="Enter Email ID"></input>
         <small id="emailInfo" class="text-mute form-text"> Email ID would be the username of the User.</small>
       </div>
       <div class="form-group col-sm-6">
         <label for="mobNo"> Mobile Number </label>
         <input type="text" class="form-control" id="mobNo" name="student[mobNo]" placeholder="Enter Mobile Number"></input>
       </div>
     </div>
     <div class="row">
       <div class="form-group col-sm-6">
         <label for="addr"> Address </label>
         <input type="text" class="form-control" id="addr" name="student[address]" placeholder="Enter Address"></input>
       </div>
       <div class="form-group col-sm-6">
         <label for="dob">Date of Birth</label>
         <input type="date" class="form-control" id="dob" name="student[dob]" placeholder="Enter DOB"></input>
       </div>
     </div>
     <div class="row">
       <div class="form-group col-sm-6">
         <label for="accessLev"> Hostel </label>
         <select class="form-control" id="accessLev" name="student[hostname]">
           <option value="1">BH1</option>
           <option value="2">BH2</option>
           <option value="3">BH3</option>
           <option value="4">BH4</option>
         </select>
       </div>

       <div class="form-group col-sm-6">
        <label for="name">Room No</label>
        <input type="text" class="form-control" id="name" name="student[roomNo]" placeholder="Enter Room no"> </input>
       </div>
     </div>

     <div class="row">
       <div class="form-group col-sm-6">
        <label for="localGuardName">Local Guardian Name</label>
        <input type="text" class="form-control" id="name" name="student[localGuardName]" placeholder="Enter Name"> </input>
       </div>
       <div class="form-group col-sm-6">
        <label for="localGuardName">Local Guardian Mobile no</label>
        <input type="text" class="form-control" id="name" name="student[localGuardMobNo]" placeholder="Enter Mobile no"> </input>
       </div>
       <div class="form-group col-sm-6">
        <label for="localGuardName">Local Guardian address</label>
        <input type="text" class="form-control" id="name" name="student[localGuardAddr]" placeholder="Enter address"> </input>
       </div>


     </div>
     <button type="submit" class="btn btn-primary">Submit</button>
   </form>
</div>

<%include ../partials/footer %>
