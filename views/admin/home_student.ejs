<% include ../partials/header_admin_student %>

<div class="container">
    <form>
      <div class="row">
        <div class="form-group col-auto">
         <label for="username">Username</label>
         <input  readonly type="text" class="form-control form-control-plaintext" id="username" placeholder="<%= user.username %>"> </input>
        </div>
       <div class="form-group col-auto">
         <label for="rollNo">Roll Number</label>
         <input readonly type="text" class="form-control form-control-plaintext" id="rollNo" placeholder=<%= user.rollNo %>></input>
       </div>
      </div>
     <div class="row">
       <div class="form-group col-auto">
         <label for="cardStatus"> Card Status</label>
         <input readonly type="text" class="form-control form-control-plaintext" id="cardStatus" placeholder="<%= cardStat(card.cardStatus) %>"></input>
       </div>
       <div class="form-group col-auto">
         <label for="cardNo"> Card Number</label>
         <input readonly type="text" class="form-control form-control-plaintext" id="cardNo" placeholder="<%=card.cid%>"></input>
       </div>

     </div>
   </form>
   <form method="post" action="/admin/student/unblockcard">
          <% if(access>2 && (card.cardStatus==3 || card.cardStatus==2)){%>
                 <div class="form-group col-3">
                   <input type="submit" class="form-control btn btn-success" value="Unblock Card" />
                 </div>
            <%}%>
  </form>

  </div>
<%function cardStat(x){
  var str;
 switch(x){
  case 1: str="Valid";
          return str;
          break;

  case 2: str="Lost Card";
          return str;
          break;

  case 3: str="Card Blocked: Contact IMS";
          return str;
          break;

  case 4: str="Card Not Assigned";
          return str;
          break;

  default: str="Unknown Error/Status";
            return str;
            break;
  }
}%>

<% include ../partials/footer %>
